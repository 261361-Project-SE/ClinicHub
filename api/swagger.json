      "delete": {
        "summary": "Delete a booking by UID",
        "description": "Deletes the booking for the user identified by the given UID. The body must include the `UID` of the booking to delete.",
        "tags": ["Booking"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
