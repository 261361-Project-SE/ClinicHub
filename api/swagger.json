  "paths": {
    "/appointment": {
      "get": {
        "summary": "Get all appointment",
        "description": "Returns a list of all appointment",
        "tags": ["Appointment"],
        "responses": {
          "200": {
            "description": "A list of appointment",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "test": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/appointment/create": {
      "post": {
        "summary": "Create Appointment",
        "description": "Create and return the appointment",
        "tags": ["Appointment"],
        "requestBody": {
          "description": "Appointment data to create",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "test": {
                    "type": "string",
                    "description": "The name of the test",
                    "example": "Blood Test"
                  }
                },
                "required": ["test"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A appointment detail",
            "content": {
              "application/json": {
                "schema": {
                  "type": "json",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "test": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Booking/AllBooking": {
      "get": {
        "summary": "Get all booking",
        "description": "Returns a list of all booking",
        "tags": ["Booking"],
        "responses": {
          "200": {
            "description": "The details of the created appointment",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "UID": {
                        "type": "string",
                        "description": "Unique identifier for the booking",
                        "example": "d29701c8-ec7a-4da5-9b9b-06df448ea3f0"
                      },
                      "firstname": {
                        "type": "string",
                        "description": "The first name of the person booking",
                        "example": "John"
                      },
                      "lastname": {
                        "type": "string",
                        "description": "The last name of the person booking",
                        "example": "Doe"
                      },
                      "age": {
                        "type": "integer",
                        "description": "The age of the person booking",
                        "example": 30
                      },
                      "phone_number": {
                        "type": "string",
                        "description": "The phone number of the person booking",
                        "example": "+1234567890"
                      },
                      "details": {
                        "type": "string",
                        "description": "Additional details about the appointment",
                        "example": "First-time appointment"
                      },
                      "appointment_date": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date of the appointment",
                        "example": "2024-12-15T00:00:00.000Z"
                      },
                      "appointment_time": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The time of the appointment",
                        "example": "1970-01-01T10:30:00.000Z"
                      },
                      "status": {
                        "type": "string",
                        "description": "The current status of the booking",
                        "example": "ready"
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The creation timestamp of the booking",
                        "example": "2024-12-09T10:59:35.466Z"
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The last update timestamp of the booking",
                        "example": "2024-12-09T10:59:35.466Z"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
