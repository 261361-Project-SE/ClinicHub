        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "UID": {
                    "type": "string",
                    "description": "Unique identifier of the booking to update",
                    "example": "d29701c8-ec7a-4da5-9b9b-06df448ea3f0"
                  },
                  "firstname": {
                    "type": "string",
                    "description": "Updated first name of the booking",
                    "example": "John"
                  },
                  "lastname": {
                    "type": "string",
                    "description": "Updated last name of the booking",
                    "example": "Doe"
                  },
                  "age": {
                    "type": "integer",
